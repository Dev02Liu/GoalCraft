<Window x:Class="GoalCraft.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoalCraft"
        mc:Ignorable="d"
        Title="GoalCraft" Height="450" Width="800">
    <Grid>
        <TextBlock Name="tbTitle" Text="GoalCraft" FontSize="75" VerticalAlignment="Center"  HorizontalAlignment="Center"/>
        <Button Name="btnRun" Width="100" Height="50" 
                VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                Content="Run" FontSize="20" Click="btnRun_Click"    />
    </Grid>
</Window>
